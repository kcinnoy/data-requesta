            <!-- MAIN CONTENT-->

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Data Requesta</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <a class="<%=tog_el_out%>" href="/profile">Profile</a><br>
          <a class="<%=tog_el_out%>" href="/logout">Log Out</a>
          <div class="sidebar">
            <div class="log-formx">
              <div class="log-in-form <%=tog_el%>">
                <h3>Log In</h3>
                  <form action="/login" method="POST">
                    <label for="username">Username</label>
                    <input class="form-inputx"type="text" name="username" id="username"><br>
                    <label for="password">Password</label>
                    <input class="form-inputx" type="text" name="password" id="password"><br>
                    <input class="log-sign-btn-modal" type="submit" value="Login" id="submit">
                  </form>
                </div>
            </div>
              <div class="sign-in-form <%=tog_el%>">
                <h3>Sign Up</h3>
                <form action="/signup" method="POST">
                  <label for="username">Username:</label>
                    <input class="form-inputx" type="text" name="username" id="username"><br>
                    <label for="email">Email:</label>
                    <input class="form-inputx" type="text" name="email" id="email"><br>
                    <label for="password">Password:</label>
                    <input class="form-inputx" type="text" name="password" id="password"><br>
                    <input class="log-sign-btn-modal" type="submit" value="Sign Up" id="Submit">
                </form>
              </div>


          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!--flash msg -->
  <div class="flash-msg">
    <div class="fail-logsignx"><%= flash[:fail_signup]%></div>
    <div class="fail-logsignx"><%= flash[:fail_login]%></div>
  </div>
